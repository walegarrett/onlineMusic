<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Indicator">
        <attr name="color" format="color|reference" />
        <attr name="height" format="dimension|reference" />
    </declare-styleable>
    <declare-styleable name="Lrc">
        <attr name="android:textSize" />
        <attr name="normalTextColor" format="reference|color" />
        <attr name="currentTextColor" format="reference|color" />
        <attr name="dividerHeight" format="dimension|reference" />
        <attr name="rows" format="integer" />
    </declare-styleable>
    <declare-styleable name="theme">
        <attr name="appbg" format="reference"/>
        <attr name="press_color" format="reference"/>
        <attr name="play_bar_color" format="reference"/>
        <attr name="accent_color" format="reference"/>
        <attr name="divider" format="reference"/>
        <attr name="image_tint" format="reference"/>
        <attr name="my_selector_layout" format="reference"/>
        <attr name="text_color" format="color"/>
    </declare-styleable>

    <attr name="fontsize_1" format="dimension" />
    <attr name="fontsize_2" format="dimension" />
    <attr name="fontsize_3" format="dimension" />
</resources>
